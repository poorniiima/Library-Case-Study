<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

</head>

<body>
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <ul class="navbar-nav">
            <% for(i=0;i<nav.length;i++) { %>

                <li class="nav-item active">
                    <a class="nav-link" href="<%= nav[i].link %>">
                        <%= nav[i].name %>
                    </a>
                </li>
                <% } %>

        </ul>
        <!-- <div class="sign_text">

            <i class="fa fa-user"></i><a href="sign-in.html"> Sign In</a> or <a href="sign-up.html">Create Account</a>
        </div> -->
    </nav>
    <div class="jumbotron top">
        <div class="col-md-7">
            <h1>
                <%=title %>
            </h1>
        </div>
        <div class="col-md-5 blank_space">

        </div>
    </div>
    <div class="container main">
        <h1>Sign In</h1>
        <hr>
        <div class="sign_in">
            <div class="col-md-8">
                <% if(err_msg!="")  { %>
                    <p class="err_msg">
                        <%= err_msg %>
                    </p>
                    <% } %>
                        <form class="form-horizontal" id="myForm" method="post" action="/check" onsubmit="return signin_validate()">


                            <div class="form-group">
                                <label class="col-md-2">Email</label>
                                <div class="col-md-10">
                                    <small class="mand" id="error_lemail"></small>
                                    <input type="email" class="form-control" id="lemail" name="email" onblur="validate_lemail(this.value)" placeholder="Enter Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2">Password</label>
                                <div class="col-md-10">
                                    <small class="mand" id="error_lpassword"></small>
                                    <input type="password" class="form-control" name="password" id="lpassword" onblur="validate_lpassword(this.value)" placeholder="Enter Password">
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary submit_button">Login</button>
                                </div>
                            </div>
                        </form>
            </div>
        </div>


    </div>
    <!-- Success Modal -->
    <div id="myModal_login" class="modal">
        <div class="modal-content">
            <div>
                <!-- <span class="close">&times;</span> -->
            </div>
            <div class="success_img">
                <img src="/images/tik.gif">
            </div>
            <div class="success_h1">
                <h1>Logged in Successfully</h1>
            </div>
            <br>
            <a class="success_btn" href="/"><button class="btn btn-primary">Continue</button></a>
        </div>

    </div>
    <footer>
        <div class="container">
            <h1>Follow Us</h1>
            <div class="social_icon">
                <button class="btn btn-info">Twitter</button>
                <button class="btn btn-primary">Facebook</button>
                <button class="btn btn-danger">Google+</button>
            </div>
        </div>


    </footer>
    <script src="/js/form.js"></script>
</body>

</html>