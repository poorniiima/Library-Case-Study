<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <ul class="navbar-nav">
            <% for(i=0;i<nav.length;i++) { %>

                <li class="nav-item active">
                    <a class="nav-link" href="<%= nav[i].link %>">
                        <%= nav[i].name %>
                    </a>
                </li>
                <% } %>

        </ul>
        <!-- <div class="sign_text">

            <i class="fa fa-user"></i><a href="sign-in.html"> Sign In</a> or <a href="sign-up.html">Create Account</a>
        </div> -->
    </nav>
    <div class="jumbotron top">
        <div class="col-md-7">
            <h1>Author</h1>
        </div>
        <div class="col-md-5 blank_space">

        </div>
    </div>

    <div class="container main">
        <h1>EDIT AUTHOR</h1>
        <hr>
        <div class="sign_up">
            <div class="col-md-8">
                <form class="form-horizontal" enctype="multipart/form-data" id="myForm" method="POST" action="/admin/editAuthor" onsubmit="return author_edit_validate()">
                    <div class="form-group">
                        <label class="col-md-3">Author Name <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="author_error_name"></small>
                            <input type="text" class="form-control" id="author_name" value="<%= author.name %>" name="name" onblur="author_validate_name(this.value)" placeholder="Enter Book Name">
                            <input type="hidden" name="id" id="id" value="<%= author._id %>">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3">Genre <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="author_error_genre"></small>
                            <select type="text" class="form-control" name="genre" id="author_genre" onblur="author_validate_genre(this.value)" placeholder="Select Genre">
                                <option value="">--Select--</option> 
                                <option value="Adventure" <% if(author.genre=="Adventure") { %> selected <% } %>>Adventure</option> 
                                <option value="Art" <% if(author.genre=="Art") { %> selected <% } %>>Art</option>
                                <option value="Children’s" <% if(author.genre=="Children’s") { %> selected <% } %>>Children’s</option>
                                <option value="Contemporary" <% if(author.genre=="Contemporary") { %> selected <% } %>>Contemporary</option>
                                <option value="Cooking" <% if(author.genre=="Cooking") { %> selected <% } %>>Cooking</option>
                                <option value="Development" <% if(author.genre=="Development") { %> selected <% } %>>Development</option>
                                <option value="Dystopian" <% if(author.genre=="Dystopian") { %> selected <% } %>>Dystopian</option>
                                <option value="Families & Relationships" <% if(author.genre=="Families & Relationships") { %> selected <% } %>>Families & Relationships</option>
                                <option value="Fantasy" <% if(author.genre=="Fantasy") { %> selected <% } %>>Fantasy</option>
                                <option value="Guide" <% if(author.genre=="Guide") { %> selected <% } %>>Guide</option>
                                <option value="Health" <% if(author.genre=="Health") { %> selected <% } %>>Health</option>
                                <option value="Historical fiction" <% if(author.genre=="Historical fiction") { %> selected <% } %>>Historical fiction</option>
                                <option value="History" <% if(author.genre=="History") { %> selected <% } %>>History</option>
                                <option value="Horror" <% if(author.genre=="Horror") { %> selected <% } %>>Horror</option>
                                <option value="Humor" <% if(author.genre=="Humor") { %> selected <% } %>>Humor</option>
                                <option value="Memoir" <% if(author.genre=="Memoir") { %> selected <% } %>>Memoir</option> 
                                <option value="Motivational" <% if(author.genre=="Motivational") { %> selected <% } %>>Motivational</option> 
                                <option value="Mystery" <% if(author.genre=="Mystery") { %> selected <% } %>>Mystery</option> 
                                <option value="Paranormal" <% if(author.genre=="Paranormal") { %> selected <% } %>>Paranormal</option>  
                                <option value="Romance" <% if(author.genre=="Romance") { %> selected <% } %>>Romance</option> 
                                <option value="Science Fiction" <% if(author.genre=="Science Fiction") { %> selected <% } %>>Science Fiction</option> 
                                <option value="Personal" <% if(author.genre=="Personal") { %> selected <% } %>>Personal</option> 
                                <option value="Thriller" <% if(author.genre=="Thriller") { %> selected <% } %>>Thriller</option> 
                                <option value="Travel" <% if(author.genre=="Travel") { %> selected <% } %>>Travel</option> 
                                                       </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3">Description <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="author_error_description"></small>
                            <textarea class="form-control address_field" name="description" id="author_description" placeholder="Description" onblur="author_validate_description(this.value)"><%= author.description %></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3">Author Photo <small class="mand">*</small></label>
                        <div class="col-md-10">
                            <small class="mand" id="author_error_image"></small>
                            <input type="file" class="form-control " name="image" id="author_image">
                        </div>
                        <img id="preview" src="/images/author/<%= author.image %>" alt="Author Photo" />
                    </div>









                    <div class="form-group">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary submit_button">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


    </div>

    <!-- Success Modal -->
    <div id="modal_add_book" class="modal">
        <div class="modal-content">
            <div>
                <span class="close">&times;</span>
            </div>
            <div class="success_img">
                <img src="/images/tik.gif">
            </div>
            <div class="success_h1">
                <h1>Book Details Added Successfully</h1>
            </div>
            <br>
            <a class="success_btn" href="/books"><button class="btn btn-primary">View Books List</button></a>
        </div>

    </div>

    <footer>
        <div class="container">
            <h1>Follow Us</h1>
            <div class="social_icon">
                <button class="btn btn-info">Twitter</button>
                <button class="btn btn-primary">Facebook</button>
                <button class="btn btn-danger">Google+</button>
            </div>
        </div>


    </footer>
    <script src="/js/form.js"></script>
</body>

</html>